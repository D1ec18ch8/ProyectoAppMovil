<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BigFoodMaui.Views.ViewLogin"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="15">

        <Label Text="Usuario" />
        <Entry x:Name="txtUser" Placeholder="Ingrese su usuario" />

        <Label Text="Contraseña" />
        <Entry x:Name="txtPass" Placeholder="Ingrese su contraseña" IsPassword="True" />

        <Button Text="Iniciar Sesión" Clicked="btnLogin_Clicked" />
    </VerticalStackLayout>
</ContentPage>