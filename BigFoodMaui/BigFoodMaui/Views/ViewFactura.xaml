<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BigFoodMaui.Views.ViewFactura"
             Title="Facturas">

    <CollectionView x:Name="facturasList" Margin="15">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding numero}" FontAttributes="Bold" FontSize="18" />
                        <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}" />
                        <Label Text="{Binding codCliente, StringFormat='Cliente: {0}'}" />
                        <Label Text="{Binding tipoPago, StringFormat='Pago: {0}'}" />
                        <Label Text="{Binding total, StringFormat='Total: â‚¡{0:N2}'}" TextColor="Green" />
                        <Label Text="{Binding estado, StringFormat='Estado: {0}'}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>